@model Estacionamentos

<form asp-action="Configurar" asp-controller="Estacionamento" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Configurar Estacionamento</legend>

        <div class="form-group">
            <label asp-for="Vagas">Vagas:</label>
            <input class="form-control" asp-for="Vagas" type="number" />
            <span class="text-danger" asp-validation-for="Vagas"></span>
        </div>

        <div class="form-group">
            <label asp-for="Diaria">Diária:</label>
            <input class="form-control" asp-for="Diaria" type="number" />
            <span class="text-danger" asp-validation-for="Diaria"></span>
        </div>
        <div class="form-group">
            <label asp-for="Horista">Horista:</label>
            <input class="form-control" asp-for="Horista" type="number" />
            <span class="text-danger" asp-validation-for="Horista"></span>
        </div>
        <br />
        <br />

        <input type="submit" class="btn btn-primary" value="Configurar" />

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    </fieldset>
</form>