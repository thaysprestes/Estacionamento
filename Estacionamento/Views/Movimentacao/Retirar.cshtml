        <legend>Retirar carro</legend>

        <div class="form-group">
            <label>Placa</label>
            <input name="placa" type="text" class="form-control" placeholder="AAA-0000">
        </div>
        <br />
        <br />

        <input type="submit" class="btn btn-primary" value="Retirar" />

