<form asp-action="Reservar" asp-controller="Movimentacao" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Reserva de Vaga</legend>

        <div class="form-group">
            <label>Placa</label>
            <input name="placa" type="text" class="form-control" placeholder="AAA-0000">
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" name="id" value="Diaria" checked>
            <label class="form-check-label" for="exampleRadios1">
                Diaria
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="id" value="Horista">
            <label class="form-check-label" for="exampleRadios1">
                Horista
            </label>
        </div>
        <br/>
        <br />

        <input type="submit" class="btn btn-primary" value="Reservar" />

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    </fieldset>
</form>